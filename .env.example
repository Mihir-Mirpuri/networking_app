# ============================================================================
# Database Configuration
# ============================================================================
# Get your connection string from Supabase:
# 1. Go to your Supabase project
# 2. Project Settings → Database → Connection String
# 3. Copy the "URI" format connection string
# ============================================================================
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# ============================================================================
# NextAuth Configuration
# ============================================================================
# URL where your app is hosted (use http://localhost:3000 for local development)
NEXTAUTH_URL="http://localhost:3000"

# Secret key for NextAuth (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here"

# ============================================================================
# Google OAuth Configuration
# ============================================================================
# Get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create/select a project
# 3. Enable Google Custom Search API and Gmail API
# 4. Create OAuth 2.0 credentials (Web application)
# 5. Add redirect URI: http://localhost:3000/api/auth/callback/google
# 6. Add scopes: openid, email, profile, https://www.googleapis.com/auth/gmail.send
# ============================================================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================================================
# Google Custom Search Engine
# ============================================================================
# Get API key from Google Cloud Console (same project as above)
# Enable "Custom Search API"
# Create a Custom Search Engine at https://programmablesearchengine.google.com/
# ============================================================================
GOOGLE_CSE_API_KEY="your-google-cse-api-key"
GOOGLE_CSE_CX="bf53ffdb484f145c5"

# ============================================================================
# Apollo API (Optional)
# ============================================================================
# Used for email enrichment. Leave empty if not using.
# Get API key from https://www.apollo.io/
# ============================================================================
APOLLO_API_KEY=""

# ============================================================================
# Redis (Optional)
# ============================================================================
# Only needed if using background job processing
# Leave empty if not using Redis
# ============================================================================
REDIS_URL="redis://localhost:6379"

# ============================================================================
# Test Mode
# ============================================================================
# Set to "true" to log emails to console instead of actually sending them
# Useful for testing without sending real emails
# ============================================================================
TEST_MODE="false"

# ============================================================================
# Resend (Feedback Emails)
# ============================================================================
# Used for sending user feedback emails
# Get API key from https://resend.com/
# Free tier: 100 emails/day
# ============================================================================
RESEND_API_KEY=""
